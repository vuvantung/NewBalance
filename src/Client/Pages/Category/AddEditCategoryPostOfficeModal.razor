<EditForm Model="@AddEditPostOfficeModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Thêm Account
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>                
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.POSCODE)" @bind-Value="AddEditPostOfficeModel.POSCODE" Label="Mã bưu cục" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.POSNAME)" @bind-Value="AddEditPostOfficeModel.POSNAME" Label="Tên bưu cục" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.ADDRESS)" @bind-Value="AddEditPostOfficeModel.ADDRESS" Label="Địa chỉ" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.POSTYPECODE)" @bind-Value="AddEditPostOfficeModel.POSTYPECODE" Label="Loại bưu cục" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="int" For="@(() => AddEditPostOfficeModel.PROVINCECODE)" @bind-Value="AddEditPostOfficeModel.PROVINCECODE" Label="Mã tỉnh" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.POSLEVELCODE)" @bind-Value="AddEditPostOfficeModel.POSLEVELCODE" Label="Cấp bưu cục" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.COMMUNECODE)" @bind-Value="AddEditPostOfficeModel.COMMUNECODE" Label="Mã phường xã" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditPostOfficeModel.UNITCODE)" @bind-Value="AddEditPostOfficeModel.UNITCODE" Label="Mã đơn vị" />
                </MudItem>
                <MudItem xs="6" md="3">
                    <MudCheckBox For="@(() => AddEditPostOfficeModel.VX)" @bind-Checked="@AddEditPostOfficeModel.VX" Color="Color.Secondary" Label="Vùng Xa" />
                </MudItem>
                <MudItem xs="6" md="3">
                    <MudCheckBox For="@(() => AddEditPostOfficeModel.VXHD)" @bind-Checked="@AddEditPostOfficeModel.VXHD" Color="Color.Secondary" Label="Hải đảo" />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Hủy</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">Lưu</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>