@page "/Doi-Soat/Category"
@attribute [Authorize(Policy = Permissions.ReportBasePermisstion.View)]
@inject Microsoft.Extensions.Localization.IStringLocalizer<CategoryBase> _localizer
<style>
    .mud-table-container {
        overflow: auto;
    }
</style>

<HeroTitle Title="@_localizer["Danh mục"]" Description="@_localizer["Danh mục đối soát"]" />
@if ( !_loaded )
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudCard Class="mb-10">
        <MudCardContent Class="d-flex flex-wrap gap-4">
            <MudSelect @bind-Value="_account" T="string" Label="Mã tỉnh" AnchorOrigin="Origin.BottomCenter">
                @foreach ( var item in _accountFilter )
                {
                    <MudSelectItem Value="@item.VALUE">@item.TEXT</MudSelectItem>
                }
            </MudSelect>
            <MudSelect @bind-Value="_categoryType" T="string" Label="Loại danh mục" AnchorOrigin="Origin.BottomCenter">
                <MudSelectItem Value="@("1")">Danh mục tỉnh</MudSelectItem>
                <MudSelectItem Value=@("2")>Danh mục bưu cục</MudSelectItem>
                <MudSelectItem Value=@("3")>Danh mục giá vốn chuẩn</MudSelectItem>
                <MudSelectItem Value=@("4")>Danh mục giá vốn chuẩn NT</MudSelectItem>
            </MudSelect>
        </MudCardContent>
    </MudCard>

    if ( _categoryType == "1" )
    {
        <CategoryAccount Account="Convert.ToInt32(_account)"></CategoryAccount>
    }

    if ( _categoryType == "2" )
    {
        <CategoryPostOffice Account="Convert.ToInt32(_account)"></CategoryPostOffice>
    }

    if ( _categoryType == "3" )
    {
        <CategoryGiaVonChuan Account="Convert.ToInt32(_account)"></CategoryGiaVonChuan>
    }

    if ( _categoryType == "4" )
    {
        <CategoryGiaVonChuanNT Account="Convert.ToInt32(_account)"></CategoryGiaVonChuanNT>
    }
}