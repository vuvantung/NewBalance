<EditForm Model="@AddEditDistrictModel" OnValidSubmit="SaveAsync">
    <FluentValidationValidator @ref="_fluentValidationValidator" />
    <MudDialog>
        <TitleContent>
            <MudText Typo="Typo.h6">
                <MudIcon Icon="@Icons.Material.Filled.Add" Class="mr-3 mb-n1" />
                Thêm mới Quận
            </MudText>
        </TitleContent>
        <DialogContent>
            <MudGrid>                
                <MudItem xs="12" md="6">
                    <MudTextField T="int" For="@(() => AddEditDistrictModel.DISTRICTCODE)" @bind-Value="AddEditDistrictModel.DISTRICTCODE" Label="Mã Quận/Huyện" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditDistrictModel.DISTRICTNAME)" @bind-Value="AddEditDistrictModel.DISTRICTNAME" Label="Tên Quận/Huyện" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="string" For="@(() => AddEditDistrictModel.DESCRIPTION)" @bind-Value="AddEditDistrictModel.DESCRIPTION" Label="Mô tả" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField T="int" For="@(() => AddEditDistrictModel.PROVINCECODE)" @bind-Value="AddEditDistrictModel.PROVINCECODE" Label="Mã tỉnh" ReadOnly />
                </MudItem>
            </MudGrid>
        </DialogContent>
        <DialogActions>
            <MudButton DisableElevation Variant="Variant.Filled" OnClick="Cancel">Hủy</MudButton>
            <MudButton DisableElevation Variant="Variant.Filled" ButtonType="ButtonType.Submit" Disabled="@(!Validated)" Color="Color.Success">Lưu</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>