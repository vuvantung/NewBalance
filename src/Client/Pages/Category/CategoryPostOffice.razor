
@attribute [Authorize(Policy = Permissions.CategoryBasePermisstion.View)]
@using NewBalance.Domain.Entities.Doi_Soat.Category

@if ( _loaded )
{
    <MudTable ServerData="@(new Func<TableState, Task<TableData<PostOffice>>>(ServerReload))"
              MultiSelection="true" @bind-SelectedItems="selectedItems"
              FixedHeader="true" FixedFooter="true" Height="400px"
              Dense="true" Hover="true" @ref="table"
              HorizontalScrollbar="true">
        <ToolBarContent>
            @if ( IsLargeCategory )
            {
                <MudText Typo="Typo.h6">Danh mục bưu cục</MudText>
            }
            else
            {
                <MudText Typo="Typo.h6">Danh mục vùng xa (@CommuneName)</MudText>
            }

            @if ( IsLargeCategory)
            {
                <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" OnClick="(() => InvokeModal())" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface" Class="ms-5" Size="Size.Small">Tạo mới</MudButton>
            }
            else
            {
                <MudButton DisableElevation Variant="Variant.Filled" Color="Color.Primary" OnClick="(() => InvokeModal())" StartIcon="@Icons.Material.Filled.Add" IconColor="Color.Surface" Class="ms-5" Size="Size.Small">Thêm VXHD</MudButton>
            }
            <MudSpacer />
            <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh><MudTableSortLabel SortLabel="POSCODE" T="PostOffice">Mã bưu cục</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="POSNAME" T="PostOffice">Tên bưu cục</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="ADDRESS" T="PostOffice">Địa chỉ</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="POSTYPECODE" T="PostOffice">Loại bưu cục</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="PROVINCECODE" T="PostOffice">Mã tỉnh</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="POSLEVELCODE" T="PostOffice">Cấp bưu cục</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="COMMUNECODE" T="PostOffice">Mã phường xã</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="UNITCODE" T="PostOffice">Mã đơn vị</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="STATUS" T="PostOffice">Trạng thái</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="VX" T="PostOffice">Vùng xa</MudTableSortLabel></MudTh>
            <MudTh><MudTableSortLabel SortLabel="VXHD" T="PostOffice">Hải đảo</MudTableSortLabel></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="POSCODE">@context.POSCODE</MudTd>
            <MudTd DataLabel="POSNAME">@context.POSNAME</MudTd>
            <MudTd DataLabel="ADDRESS">@context.ADDRESS</MudTd>
            <MudTd DataLabel="POSTYPECODE">@context.POSTYPECODE</MudTd>
            <MudTd DataLabel="PROVINCECODE">@context.PROVINCECODE</MudTd>
            <MudTd DataLabel="POSLEVELCODE">@context.POSLEVELCODE</MudTd>
            <MudTd DataLabel="COMMUNECODE">@context.COMMUNECODE</MudTd>
            <MudTd DataLabel="UNITCODE">@context.UNITCODE</MudTd>
            <MudTd DataLabel="STATUS">@context.STATUS</MudTd>
            <MudTd DataLabel="VX"><MudCheckBox T="bool" Checked="@context.VX" Color="Color.Secondary" CheckedChanged="@(c=>HandleCheckedChangedVX(context, c))"/></MudTd>
            <MudTd DataLabel="VXHD"><MudCheckBox T="bool" Checked="@context.VXHD" Color="Color.Secondary" CheckedChanged="@(c=>HandleCheckedChangedHD(context, c))" /></MudTd>
        </RowTemplate>
        <NoRecordsContent>
            <MudText>No matching records found</MudText>
        </NoRecordsContent>
        <LoadingContent>
            <MudText>Loading...</MudText>
        </LoadingContent>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
}





