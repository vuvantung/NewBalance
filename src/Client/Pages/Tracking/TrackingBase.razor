@page "/dinh-vi"
@attribute [Authorize(Policy = Permissions.TrackingPermisstion.View)]
<HeroTitle Title="Định vị" Description="Tra cứu bưu gửi" />

<MudSelect @bind-Value="_typeTracking" T="int" Label="Chọn loại trả cứu" AnchorOrigin="Origin.BottomCenter">
    <MudSelectItem Value="1">Tra cứu đơn</MudSelectItem>
    <MudSelectItem Value="2">Tra cứu hàng loạt</MudSelectItem>
</MudSelect>

@if(_typeTracking == 1 )
{
    <MudTextField Label="Mã E1" Variant="Variant.Text" @bind-Value="@ItemCode">
    </MudTextField>
    <MudButton Variant="Variant.Filled" Color="Color.Success" Class="mb-5 mt-5" OnClick="Tracking">Tra cứu</MudButton>
    <TrackingSingle TrackingInfor="@TrackingInfor" class="mb-10"></TrackingSingle>
}

@if ( _typeTracking == 2 )
{
    <MudTextField Label="Mã E1" Variant="Variant.Text" @bind-Value="@ListItemCode" Lines="5" Placeholder="Nhập nhiều mã E1 cách dòng">
    </MudTextField>
    <MudButton Variant="Variant.Filled" Color="Color.Success" Class="mb-5 mt-5" OnClick="TrackingSLL">Tra cứu</MudButton>
}

<style>
    .mud-grid-spacing-xs-2 > .mud-grid-item {
        padding: 4px;
    }
</style>







